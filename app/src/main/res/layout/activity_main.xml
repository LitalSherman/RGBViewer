<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:weightSum="5"
    android:padding="3dp"
    android:background="@color/colorBlack"
    tools:context="com.sherman.lital.rgbviewer.view.MainActivity">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/RGB_title"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorWhite"/>

        <com.sherman.lital.rgbviewer.view.CommonColorView
            android:id="@+id/most_common_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.sherman.lital.rgbviewer.view.CommonColorView
            android:id="@+id/second_common_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.sherman.lital.rgbviewer.view.CommonColorView
            android:id="@+id/third_common_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.sherman.lital.rgbviewer.view.CommonColorView
            android:id="@+id/fourth_common_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.sherman.lital.rgbviewer.view.CommonColorView
            android:id="@+id/fifth_common_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>